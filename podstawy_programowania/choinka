using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp8
{
    class Program
    {
        static void Main(string[] args)
        
        {
            Console.WriteLine("Podaj długość boku");
            int a = int.Parse(Console.ReadLine());

            for (int i = a; i > 0; i--)
            {
                
                for (int k = 0; k <= (a - i); k++)
                {
                    Console.Write("*");
                }

                Console.WriteLine();
            }

            Console.ReadKey();
        }
    }
}
